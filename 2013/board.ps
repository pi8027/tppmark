%!PS-Adobe-2.0 EPSF-2.0

/Times-Roman findfont 60 scalefont setfont
/buffer 64 string def

0 1 3 {
    0 1 3 {
        1 index 100 mul 50 add 450 2 index 100 mul sub moveto
        1 index buffer cvs show (,) show buffer cvs show
    } for
    pop
} for

showpage

gsave

0 1 3 {
    0 1 3 {
        1 index 100 mul 50 add 450 2 index 100 mul sub moveto
        1 index 1 index add 2 mod 1 eq {
          1 0 0
        } {
          0 0 1
        } ifelse setrgbcolor
        1 index buffer cvs show (,) show buffer cvs show
    } for
    pop
} for

grestore

showpage
